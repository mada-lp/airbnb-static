  <body>

   <!-- Your banner code -->
    <div class="banner" style="background: linear-gradient(-225deg, rgba(161,255,206,0.3) 0%, rgba(250,253,209,0.3) 50%), url('http://68.media.tumblr.com/b3ef1693adc4e38d93ec4bd0b3df0cb8/tumblr_ohapvk7kQI1slhhf0o1_1280.jpg');">
      <div class="banner-content">
        <h1>WELCOME HOME</h1>
        <p>Rent unique places to stay from local hosts in 190+ countries.</p>
        <form action="#" class="form-inline">
          <input type="text" class="form-control input-lg" placeholder="checkin">
          <input type="text" class="form-control input-lg" placeholder="checkout">
          <select class="form-control input-lg">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
          <input type="submit" class="btn btn-primary btn-lg" value="Search">
        </form>
      </div>
    </div>
    <!-- Your features code -->
    <div class="text-center padded features">
      <div class="container">
        <div class="row">
          <div class="col-xs-6 col-md-3">
            <%= image_tag "images/globe.png" %>
            <h2>Discover the world</h2>
            <p>The earth is your new home.</p>
        </div>
          <div class="col-xs-6 col-md-3">
            <%= image_tag "images/dollar.png" %>
            <h2>Pay online</h2>
            <p>No cash issues anymore.</p>
          </div>
          <div class="col-xs-6 col-md-3">
            <%= image_tag "images/beer.png" %>
            <h2>Meet people</h2>
            <p>Discover new culture and lifestyle.</p>
          </div>
          <div class="col-xs-6 col-md-3">
            <%= image_tag "images/heart.png" %>
            <h2>Share and love</h2>
            <p>Join a community you will love.</p>
            </div>
        </div>
      </div>
    </div>
    <!-- cards -->
    <div class="wrapper-grey text-center">
      <div class="container">
        <h2>Your next trip</h2>
        <div class="row">
          <div class="col-xs-12 col-sm-4">
          <!-- insert <div class="card"> -->
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://media.timeout.com.br/contentFiles/image/rj/NEW_IMAGES/01_AROUND_TOWN/parquelagefinal.jpg');">
              <div class="card-category">Rio de Janeiro</div>
              <div class="card-description">
                <h2>Madalena's home</h2>
                <p>Charming house with garden</p>
              </div>
              <%= image_tag "https://scontent-grt2-1.xx.fbcdn.net/v/t1.0-9/12715608_10156453288075176_7656512378530257494_n.jpg?oh=0fd2065c606ad54f2fea1932d91e26c0&oe=5946E08E", class:"card-user avatar avatar-large" %>
              <% link_to "#", class: "card-link" do%>
              ""
              <% end %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-4">
          <!-- insert <div class="card"> -->
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://s-media-cache-ak0.pinimg.com/originals/e3/d9/c1/e3d9c121859ea4106693450a22bcecc7.jpg');">
              <div class="card-category">New York</div>
              <div class="card-description">
                <h2>Bill Murray's home</h2>
                <p>Cozy flat with a view</p>
              </div>
              <%= image_tag "http://fillmurray.com/200/200", class: "card-user avatar avatar-large"  %>
              <% link_to "#", class: "card-link" do%>
              ""
              <% end %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-4">
          <!-- insert <div class="card"> -->
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://assets.atlasobscura.com/media/W1siZiIsInVwbG9hZHMvcGxhY2VfaW1hZ2VzLzZiMWJlOGI5ZDRhMzM1YTQ5ZGRhZGQzNTdiNTFmNjJiZW5oYW5jZWQtYnV6ei13aWRlLTI5OTQzLTEzNTM4ODQ4NDMtMi5qcGciXSxbInAiLCJ0aHVtYiIsIngzOTA-Il0sWyJwIiwiY29udmVydCIsIi1xdWFsaXR5IDkxIC1hdXRvLW9yaWVudCJdXQ/enhanced-buzz-wide-29943-1353884843-2.jpg');">
              <div class="card-category">Ishinomaki</div>
              <div class="card-description">
                <h2>Kitten's place</h2>
                <p>Amazing cat island</p>
              </div>
              <%= image_tag "http://placekitten.com/200/200", class: "card-user avatar avatar-large" %>
              <% link_to "#", class: "card-link" do%>
              ""
              <% end %>
            </div>
        </div>
      </div>
      </div>
    </div>
    <!-- Your newsletter code -->
    <div class="text-center padded" id="newsletter">
      <h2>Get news from us</h2>
      <p>Leave us your mail and get news from us</p>
      <form class="form-inline">
        <input type="email" placeholder="bob@gmail.com" class="form-control">
        <input type="submit" value="Subscribe" class="btn btn-primary btn-bordered btn-bordered-primary">
      </form>
    </div>
    </div>
